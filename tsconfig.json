{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "es2022",
      "es2023",
      "es2024",
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "vite/client"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ],
      "~/components/*": [
        "./components/*"
      ],
      "~/lib/*": [
        "./lib/*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}